@foreach (var post in Model.PostLibrary.Posts)
{
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">@post.Date</h4>
            <p class="card-text">@Html.Raw(post.Message)</p>
        </div>
    </div>
